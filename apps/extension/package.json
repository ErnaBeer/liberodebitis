{
  "name": "@lit-web3/extension",
  "displayName": "DOID Extension",
  "version": "0.2.3",
  "description": "DOID Extension",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development run-p dev:*",
    "dev:inpage": "npm run build:inpage -- --watch --mode development",
    "dev:app": "vite --host --mode development",
    "build": "cross-env NODE_ENV=production run-s build:*",
    "build:inpage": "vite build --config vite.config.inpage.ts",
    "build:app": "vite build",
    "bundle": "cross-env NODE_ENV=production run-p clear && run-p build && run-p bundle:*",
    "bundle:zip": "rimraf ${RELEASE_FILE:-\"DOID.$npm_package_version\"} && jszip-cli add ./dist/* -o ./${RELEASE_FILE:-\"DOID.$npm_package_version\"}.zip",
    "bundle:crx": "crx pack ./dist -o ./${RELEASE_FILE:-\"DOID.$npm_package_version\"}.crx",
    "clear": "rimraf ./${RELEASE_FILE:-\"DOID.$npm_package_version\"}.zip && rimraf ./${RELEASE_FILE:-\"DOID.$npm_package_version\"}.crx",
    "preinstall": "npx only-allow pnpm"
  },
  "keywords": [],
  "dependencies": {
    "@aptos-labs/wallet-adapter-core": "2.0.1",
    "@erebos/keccak256": "^0.13.1",
    "@erebos/secp256k1": "^0.10.0",
    "@libp2p/crypto": "^1.0.7",
    "@lit-web3/core": "workspace:latest",
    "@lit-web3/doids": "workspace:latest",
    "@lit-web3/dui": "workspace:latest",
    "@lit-web3/ethers": "workspace:latest",
    "@lit-web3/solana-wallet-standard": "workspace:latest",
    "@metamask/eth-keyring-controller": "^12.0.1",
    "@metamask/obs-store": "^8.1.0",
    "@scure/bip39": "^1.2.0",
    "@solana/web3.js": "^1.73.3",
    "aptos": "^1.7.1",
    "ed25519-hd-key": "^1.3.0",
    "eventemitter3": "^5.0.0",
    "ipfs-core": "^0.18.0",
    "lodash": "^4.17.21",
    "pify": "^6.1.0",
    "tweetnacl": "^1.0.3",
    "w3name": "^1.0.8",
    "web3.storage": "^4.4.0",
    "webext-bridge": "^6.0.1"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "2.0.0-beta.18",
    "@ffflorian/jszip-cli": "^3.4.0",
    "@types/chrome": "latest",
    "@types/webextension-polyfill": "^0.10.0",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "rimraf": "^5.0.0",
    "unplugin-auto-import": "^0.15.0",
    "vite-plugin-node-polyfills": "^0.8.2",
    "webextension-polyfill": "^0.10.0"
  },
  "license": "MIT"
}
